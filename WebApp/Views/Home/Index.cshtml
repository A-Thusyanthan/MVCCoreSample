@model IEnumerable<Customer>

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";   No need define layout in page when have _viewStart
    ViewBag.Title = "Index";
}

@*Whatever controls define*@

<div>
    <div class="form-group row">
        <div class="col-sm-2">
            <a asp-controller="home" asp-action="create" class="btn btn-primary" style="width:100%">Add User</a>
        </div>
        <div class="col-sm-10">

        </div>
    </div>
    <div class="form-group row">
        List Of Registered Users
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <td>
                            No
                        </td>
                        <td>
                            Name
                        </td>
                        <td>
                            Email
                        </td>
                        <td>
                            Gender
                        </td>
                        <td>
                            Date Reg
                        </td>
                        <td>
                            Selected Date
                        </td>
                        <td>
                            Add Request
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="home" asp-action="details" asp-route-id="@customer.Id" class="btn btn-primary">@customer.Id</a>

                            </td>
                            <td>@customer.Name </td>
                            <td>@customer.Email </td>
                            <td>@customer.Gender </td>
                            <td>@customer.DateRegistered </td>
                            <td>
                                @if (@customer.Day1 == true)
                                {<a>Day1</a>}
                                @if (@customer.Day2 == true)
                                {<a>Day2</a>}
                                @if (@customer.Day3 == true)
                                {<a>Day3</a>}
                            </td>
                            <td>@customer.AdditionalRequest </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@*Whatever sectons can be called*@
@section Scripts
    {
    @*Whatever things need to render in loading time*@
}
