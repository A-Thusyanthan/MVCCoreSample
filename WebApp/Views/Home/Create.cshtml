@model  Customer  

@{
 ViewBag.Title = "Create Customer";
}

<form asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label">Gender</label>
        <div class="col-sm-10">
            <input type="radio" name="Gender" value="M" class="col-sm-1"  />
            <label asp-for="Gender" class="col-sm-1 col-form-label">Male</label>

            <input type="radio" name="Gender" value="F" class="col-sm-1"  />
            <label asp-for="Gender" class="col-sm-1 col-form-label">Female</label>

            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DateRegistered" class="col-sm-2 col-form-label">Date Registered</label>
        <div class="col-sm-10">
            <input asp-for="DateRegistered" class="form-control" placeholder="Date Rigistered">
            <span asp-validation-for="DateRegistered" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Day1" class="col-sm-2 col-form-label">Selected Days</label>
        <div class="col-sm-2">
            <input type="checkbox" asp-for="Day1" class="form-control" name="Day1" >
            <label asp-for="Day1" class="col-sm-1 col-form-label">Day1</label>
        </div>
        <div class="col-sm-2">
            <input type="checkbox" asp-for="Day2" class="form-control" name="Day2">
            <label asp-for="Day2" class="col-sm-1 col-form-label">Day2</label>
        </div>
        <div class="col-sm-2">
            <input type="checkbox" asp-for="Day3" class="form-control" name="Day3">
            <label asp-for="Day3" class="col-sm-1 col-form-label">Day3</label>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="AdditionalRequest" class="col-sm-2 col-form-label">Additional Request</label>
        <div class="col-sm-10">
            <input asp-for="AdditionalRequest" class="form-control" placeholder="AdditionalRequest">
            <span asp-validation-for="AdditionalRequest" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <input type="submit" name="Submit" value="Submit" class="btn btn-primary" style="width:100%"/>
        </div>
        <div class="col-sm-2">
            <a asp-controller="home" asp-action="index" class="btn btn-primary" style="width:100%">Back</a>
        </div>
        <div class="col-sm-8">

        </div>
    </div>
</form>