@model Customer

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";   No need define layout in page when have _viewStart 
    ViewBag.Title = "Details";
}

@*Whatever controls define*@

<div>


    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            @Model.Id
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @Model.Name
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @Model.Email
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label">Gender</label>
        <div class="col-sm-10">
            @Model.Gender
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DateRegistered" class="col-sm-2 col-form-label">Date Registered</label>
        <div class="col-sm-10">
            @Model.DateRegistered
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Day1" class="col-sm-2 col-form-label">Selected Event Days</label>
        <div class="col-sm-10">
            @if (Model.Day1 == true) { <a>Day1</a> }
            @if (Model.Day2 == true) { <a>Day2</a>}
            @if (Model.Day3 == true) {<a>Day3</a> }
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="AdditionalRequest" class="col-sm-2 col-form-label">Additional Request</label>
        <div class="col-sm-10">
            @Model.AdditionalRequest
        </div>

    </div>

    <div class="form-group row">

        <div class="col-sm-2">
            <a asp-controller="home" asp-action="index" class="btn btn-primary" style="width:100%">Back</a>
        </div>
        <div class="col-sm-10">

        </div>
    </div>

</div>


@*Whatever sectons can be called*@
@section Scripts  
{
@*Whatever things need to render in loading time*@
}
